{
  "name": "kanban-app",
  "private": true,
  "version": "1.4.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:unit:verbose": "jest --testPathPattern=tests/unit --verbose",
    "test:integration": "cucumber-js",
    "test:integration:watch": "nodemon --watch tests/integration --exec \"cucumber-js\"",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report coverage/playwright-report",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run lint && npm run test:coverage && npm run test:integration && npm run test:e2e",
    "test:models": "jest --testPathPattern=tests/unit/models",
    "test:viewmodels": "jest --testPathPattern=tests/unit/viewmodels",
    "test:components": "jest --testPathPattern=src/components",
    "test:hooks": "jest --testPathPattern=tests/unit/hooks",
    "test:changed": "jest --onlyChanged",
    "test:related": "jest --bail --findRelatedTests",
    "test:clear-cache": "jest --clearCache"
  },
  "dependencies": {
    "autoprefixer": "^10.4.22",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lodash-es": "^4.17.21",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.66.0",
    "tailwindcss": "^4.1.17",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@cucumber/cucumber": "^12.2.0",
    "@cucumber/pretty-formatter": "^2.4.1",
    "@eslint/js": "^9.39.1",
    "@jest/core": "^29.7.0",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.9",
    "babel-jest": "^25.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-cli": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-html-reporter": "^3.10.2",
    "msw": "^2.12.2",
    "vite": "^7.2.2"
  }
}
